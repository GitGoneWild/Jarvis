{
  "name": "jarvis",
  "version": "1.0.0",
  "description": "A cross-platform desktop personal assistant inspired by GitHub Desktop's UI/UX style",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "tsc -p tsconfig.main.json && tsc -p tsconfig.renderer.json",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build && electron-builder --win --mac --linux",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,html}\"",
    "typecheck": "tsc --noEmit -p tsconfig.main.json && tsc --noEmit -p tsconfig.renderer.json",
    "clean": "rm -rf dist",
    "test": "echo \"No tests configured yet\""
  },
  "build": {
    "appId": "com.jarvis.desktop",
    "productName": "Jarvis",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*.html",
      "src/renderer/**/*.css",
      "src/assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.svg"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icon.svg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/icon.svg"
    }
  },
  "keywords": [
    "electron",
    "desktop",
    "personal-assistant",
    "jarvis",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.9.0",
    "electron": "^39.2.4",
    "electron-builder": "^25.1.8",
    "eslint": "^9.16.0",
    "globals": "^16.5.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  }
}
